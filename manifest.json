{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Keep Clean",
    "description": "Content blocker extension to filter inappropriate content",
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "idle",
        "activeTab"
    ],
    "options_page": "options.html",
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/tests.js",
                "js/main.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}